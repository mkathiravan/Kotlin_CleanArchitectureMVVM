<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
  <data>
    <variable
        name="viewModel"
        type="net.kathir.mvvm_kotlin_cleanarchitecture.presentation.restaurantdetail.RestaurantDetailViewModel"/>
  </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

  <ImageView
      android:id="@+id/image"
      android:layout_width="200dp"
      android:layout_height="100dp"
      android:onClick="@{() -> viewModel.onImageClicked()}"
      app:imageUrl="@{viewModel.restaurantImage}"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      tools:src="@color/colorPrimary"
      />

  <LinearLayout
      android:id="@+id/info_layout"
      android:layout_width="200dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:orientation="vertical"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toBottomOf="@id/image"
      >

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{viewModel.restaurantName}"
        tools:text="Tycoon"
        />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@{viewModel.restaurantDescription}"
        tools:text="Thai, Laotion"
        />
  </LinearLayout>

  <TextView
      android:id="@+id/minutes"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:text="@{viewModel.restaurantStatus}"
      app:layout_constraintTop_toBottomOf="@id/info_layout"
      tools:text="22 Mins"
      />

  <ProgressBar
      android:id="@+id/progressBar1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:visibility="@{viewModel.progressVisible}"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:visibility="gone"
      style="?android:attr/progressBarStyleLarge"
      />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
